@model IEnumerable<ECommerceApp.Models.Product>

<h2>Order Products</h2>
<p>Select a product to order:</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Name</td>
        <td>@item.Price?.ToString("C")</td>
        <td>@item.Stock</td>
        <td>
            @if (item.Stock > 0)
            {
                <a asp-action="Create" asp-route-productId="@item.Id" class="btn btn-success btn-sm">Order</a>
            }
            else
            {
                <span class="text-danger">Out of stock</span>
            }
        </td>
    </tr>
}
    </tbody>
</table>
