@model ECommerceApp.Models.Order

<h2>Delete Order</h2>
<h4>Are you sure you want to delete this order?</h4>
<div>
    <h4>Product: @Model.Product?.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("g")</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@((Model.Product?.Price ?? 0) * Model.Quantity).ToString("C")</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MyOrders" class="btn btn-secondary">Cancel</a>
</form>
